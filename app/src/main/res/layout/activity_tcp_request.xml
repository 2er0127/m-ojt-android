<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/statusIsRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="통신구간 암호화 적용 여부"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:padding="20dp"
        android:textStyle="bold"
        android:gravity="center" />

    <TextView
        android:id="@+id/desTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusIsRequest"
        android:text="서버를 시작한 후 로그인을 진행하세요."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/idEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desTextView"
        android:hint="아이디" />

    <EditText
        android:id="@+id/pwEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEditText"
        android:hint="비밀번호"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/sendTcpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwEditText"
        android:text="로그인"
        android:background="@drawable/btn_blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/startServerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Server"
        android:layout_below="@id/sendTcpButton"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_blue"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stopServerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Server"
        android:layout_below="@id/startServerButton"
        android:background="@drawable/btn_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/requestIsStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopServerButton"
        android:gravity="center"
        android:padding="15dp"
        android:text="status"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/footerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copyright (c) 2024 SK shieldus EQST Bosim"
        android:textSize="14sp"
        android:padding="16dp"
        android:gravity="center"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
